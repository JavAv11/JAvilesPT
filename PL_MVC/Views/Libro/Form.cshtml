@model ML.Libro
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container">
    <h2>Libros</h2>
    <div class="row">
        <div class="col-lg-12">
            @using (Html.BeginForm("Form", "Libro", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="form-horizontal">

                    <div class="col-md-3">
                        @Html.LabelFor(model => model.IdLibro, new { @class = "hidden" })

                        @Html.TextBoxFor(model => model.IdLibro, new { @class = "hidden form-control" })

                        @Html.ValidationMessageFor(model => model.IdLibro)
                    </div>
                </div>


                <div class="row">
                    @Html.LabelFor(model => model.Nombre)
                    <div class="col-md-3">
                        @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", @placeholder = "Ejemplo:Javier", autocomplete = "off" })

                        @Html.ValidationMessageFor(model => model.Nombre)

                    </div>
                </div>


                <div class="row">
                    @Html.LabelFor(model => model.Autor.IdAutor)
                    <div class="input-group mb-3">
                        <span class="input-group-text"><i class="bi bi-person-rolodex"></i></span>

                        @Html.DropDownListFor(model => model.Autor.IdAutor, new SelectList(Model.Autor.NombreAutor, "IdAutor", "Nombre"), "Selecciona una opcion", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Autor.IdAutor)

                    </div>
                </div>

                <div class="row">
                    @Html.LabelFor(model => model.NumeroPaginas)
                    <div class="col-md-3">
                        @Html.TextBoxFor(model => model.NumeroPaginas, new { @class = "form-control", @placeholder = "Ejemplo:Javier", autocomplete = "off" })

                        @Html.ValidationMessageFor(model => model.NumeroPaginas)

                    </div>
                </div>

                <div class="row">
                    @Html.LabelFor(model => model.FechaPublicacion)
                    <div class="col-md-3">
                        @Html.TextBoxFor(model => model.FechaPublicacion, new { @class = "form-control", @placeholder = "Ejemplo:Javier", autocomplete = "off" })

                        @Html.ValidationMessageFor(model => model.FechaPublicacion)

                    </div>
                </div>

                <div class="row">
                    @Html.LabelFor(model => model.Editorial.IdEditorial)
                    <div class="input-group mb-3">
                        <span class="input-group-text"><i class="bi bi-person-rolodex"></i></span>

                        @Html.DropDownListFor(model => model.Editorial.IdEditorial, new SelectList(Model.Editorial.NombreEditorial, "IdEditorial", "Nombre"), "Selecciona una opcion", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Editorial.IdEditorial)

                    </div>
                </div>

                <div class="row">
                    @Html.LabelFor(model => model.Edicion)
                    <div class="col-md-3">
                        @Html.TextBoxFor(model => model.Edicion, new { @class = "form-control", @placeholder = "Ejemplo:Javier", autocomplete = "off" })

                        @Html.ValidationMessageFor(model => model.Edicion)

                    </div>
                </div>

                <div class="row">
                    @Html.LabelFor(model => model.Genero.IdGenero)
                    <div class="input-group mb-3">
                        <span class="input-group-text"><i class="bi bi-person-rolodex"></i></span>

                        @Html.DropDownListFor(model => model.Genero.IdGenero, new SelectList(Model.Genero.NombreGenero, "IdGenero", "Nombre"), "Selecciona una opcion", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Genero.IdGenero)

                    </div>
                </div>


                <div class="form-group">

                    <div class="col-md-3">

                        <input type="submit" value="Guardar" class="btn btn-success" />

                        @Html.ActionLink("Regresar", "GetAll", "Libro", htmlAttributes: new { @class = "btn btn-danger" })

                    </div>

                </div>

            }
        </div>
    </div>

</div>

